!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Montserrat:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i", :rel => "stylesheet"}/
    / Use the title from a page's frontmatter if it has one
    %title
      Rémy Rigault - Portfolio#{' - ' + current_article.title unless current_article.nil?}
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    %link{:href => "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    = stylesheet_link_tag "site"
    = stylesheet_link_tag "work"
    / Global site tag (gtag.js) - Google Analytics
    %script{:async => "", :src => "https://www.googletagmanager.com/gtag/js?id=UA-118045796-1"}
    :javascript
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-118045796-1');

  %body
    = partial "partials/header"
    = partial "partials/preload"

    .work-banner.mt-80
      .container
        .row
          .col-md-12
            %h1.text-center.mt-0.mb-0
              = current_article.title
            %ul.list-inline.list-tags.text-center
              - current_article.tags.each do |tag|
                %li.text-uppercase{:class => "#{tag}"}= tag

    .work-body.mb-60
      .container
        .row

          .col-md-12
            -# %img.img-responsive{:src => "https://picsum.photos/2240/600?image=0"}
            %img.img-responsive.m-a{:src => "#{current_article.data.thumbnail}"}

          .clearfix

          .col-md-6.col-md-offset-2.col-xs-8{:style => "min-height: 86px;"}

            %ul.list-inline.list-tools.mt-30.mb-15
              - if current_article.data.tools != nil
                - current_article.data.tools.each do |tool|
                  %li.tool{:class => "#{tool}"}= tool
              - else
                %p no tools

          .col-md-2.col-xs-4
            %p.text-right
              - if current_article.data.link != nil
                %a.link.btn.btn-link.text-uppercase.mt-30.mb-15.pt-5.pb-5{:href => "#{current_article.data.link}"} Aperçu

          .clearfix

          .col-md-8.col-md-offset-2.work-body-inner

            = yield

            - if current_article.data.video != nil
              .embed-responsive.embed-responsive-16by9
                %iframe.embed-responsive-item{:src => "#{current_article.data.video}"}


          -# .col-md-4.col-md-push-8.work-body-inner.mt-60
          -#   = yield
          -#
          -# .col-md-8.col-md-pull-4.mt-60
          -#   - if current_article.data.image != nil
          -#     %a.image-link{:href => image_path("#{current_article.data.image}")}
          -#       %img.img-responsive{:alt => "", :src => image_path("#{current_article.data.image}")}/
          -#   - elsif current_article.data.video != nil
          -#     .embed-responsive.embed-responsive-16by9
          -#       %iframe.embed-responsive-item{:src => "#{current_article.data.video}"}
          -#   - else
          -#     %p nil

    = partial "partials/footer"
    = javascript_include_tag "site"
    = javascript_include_tag "work"
